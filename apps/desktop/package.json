{
  "name": "@mono/desktop",
  "productName": "HelpMeButton",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "xvfb-maybe electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "5.0.1",
    "@mono/assist-api": "workspace:*",
    "@tanstack/react-query": "4.29.14",
    "@tanstack/react-router": "1.115.3",
    "@trpc/client": "10.33.1",
    "@trpc/react-query": "10.33.1",
    "@trpc/server": "10.33.1",
    "better-sqlite3": "11.9.1",
    "drizzle-orm": "catalog:drizzle",
    "electron-trpc": "0.7.1",
    "electron-updater": "^6.3.9",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "react-hook-form": "7.55.0",
    "zod-validation-error": "3.4.0",
    "zustand": "catalog:utils"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tailwindcss/vite": "4.1.5",
    "@tanstack/router-plugin": "1.115.3",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "catalog:node",
    "@types/react": "catalog:react",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "daisyui": "5.0.35",
    "electron": "35.1.2",
    "electron-builder": "24.13.3",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "lucide-react": "0.507.0",
    "prettier": "^3.5.3",
    "tailwind-merge": "3.2.0",
    "tailwindcss": "4.1.5",
    "typescript": "5.8.2",
    "vite": "^6.2.3",
    "xvfb-maybe": "0.2.1"
  }
}
