{
  "private": true,
  "name": "@mono/assist-me",
  "engines": {
    "pnpm": ">=9.5.0",
    "node": ">=22.0.0"
  },
  "scripts": {
    "clear": "turbo clean",
    "clean": "git clean -xdf .turbo node_modules",
    "dev-assist": "turbo dev",
    "dev:mobile": "turbo dev --filter=\"{./apps/mobile}...\"",
    "dev:mobile:fix": "cd apps/mobile & expo install --fix",
    "dev:mobile:pre-android": "pnpm -F @mono/mobile android",
    "dev:mobile:pre-ios": "pnpm -F @mono/mobile ios",
    "dev:desktop": "turbo dev --filter=\"{./apps/desktop}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:mobile": "turbo build --filter=\"...{./apps/mobile}\""
  },
  "devDependencies": {
    "turbo": "^1.13.4",
    "typescript": "5.8.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
