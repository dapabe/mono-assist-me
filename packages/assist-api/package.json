{
  "name": "@mono/assist-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": [
    "build",
    "src",
    "migrations"
  ],
  "main": "./build/index.cjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    },
    "./migrations": {
      "import": "./migrations/migrations.js",
      "require": "./migrations/migrations.js",
      "default": "./migrations/migrations.js"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .turbo build node_modules",
    "dev": "tsup --watch --silent",
    "lint": "eslint --ext js,ts",
    "test": "jest",
    "build": "tsup --clean",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio"
  },
  "eslintConfig": {
    "extends": "@mono/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "dependencies": {
    "@paralleldrive/cuid2": "2.2.2",
    "drizzle-orm": "catalog:drizzle",
    "i18next": "catalog:utils",
    "zod": "catalog:utils",
    "zod-i18n-map": "catalog:utils"
  },
  "devDependencies": {
    "@mono/eslint-config": "workspace:*",
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "catalog:node",
    "drizzle-kit": "0.31.0",
    "react-native-udp": "4.1.7",
    "tsup": "^8.3.5",
    "typesafe-i18n": "5.26.2",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "drizzle-orm": "catalog:drizzle",
    "zod": "catalog:utils",
    "zustand": "catalog:utils"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react-native-udp"
    ]
  }
}
